{
    "name": "shineklbm/tourplan",
    "type": "library",
    "description": "A simple package for Tourplan API wrapper",
    "keywords": [
        "Shineklbm",
        "Tourplan"
    ],
    "version": "1.0.0",
    "homepage": "https://github.com/Shineklbm/Tourplan",
    "license": "MIT",
    "authors": [
        {
            "name": "Shine Mon",
            "email": "shineklbm@gmail.com",
            "homepage": "http://shinesudarsanan.in",
            "role": "Developer"
        }
    ],
    "require": {
        "illuminate/support": "~5.1",
        "php" : "~5.6|~7.0",
        "greencape/xml-converter": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit" : "~4.0||~5.0",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Shineklbm\\Tourplan\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Shineklbm\\Tourplan\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
